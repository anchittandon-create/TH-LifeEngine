# ============================================
# Cost Control Settings
# ============================================

# Limit output tokens to control costs
MAX_OUTPUT_TOKENS=3000

# Maximum plan duration (smaller = less tokens = lower cost)
MAX_PLAN_DURATION_DAYS=14

# Enable cost tracking in terminal logs
ENABLE_COST_LOGGING=true

# ============================================
# Provider Priority
# ============================================

# The app will use providers in this order:
# 1. OpenAI (if OPENAI_API_KEY is set)
# 2. Gemini (if OpenAI fails or GOOGLE_API_KEY is set)
# 3. Error (if both fail)

# To FORCE Gemini only: Remove or comment out OPENAI_API_KEY
# To FORCE OpenAI only: Remove or comment out GOOGLE_API_KEY

